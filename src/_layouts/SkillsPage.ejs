<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%= locals.title ? locals.title : site.title %></title>
		<meta
			name="description"
			content="<% if (locals.description) { %>
						<% locals.description %>
					<% } else { %>
						<% site.description %>
					<% } %> "
		/>

		<!-- Open Graph Meta Tags -->
		<meta
			property="og:title"
			content="<%= locals.meta && locals.meta['og:title'] ? locals.meta['og:title'].content : site.meta['og:title'].content %>"
		/>
		<meta
			property="og:description"
			content="<%= locals.meta && locals.meta['og:description'] ? locals.meta['og:description'].content : site.meta['og:description'].content %>"
		/>
		<meta
			property="og:type"
			content="<%= locals.meta && locals.meta['og:type'] ? locals.meta['og:type'].content : site.meta['og:type'].content %>"
		/>
		<meta
			property="og:url"
			content="<%= locals.meta && locals.meta['og:url'] ? locals.meta['og:url'].content : site.meta['og:url'].content %>"
		/>
		<meta
			property="og:image"
			content="<%= locals.meta && locals.meta['og:image'] ? locals.meta['og:image'].content : site.meta['og:image'].content %>"
		/>

		<!-- Twitter Card Meta Tags -->
		<meta
			name="twitter:card"
			content="<%= locals.meta && locals.meta['twitter:card'] ? locals.meta['twitter:card'].content : site.meta['twitter:card'].content %>"
		/>
		<meta
			name="twitter:title"
			content="<%= locals.meta && locals.meta['twitter:title'] ? locals.meta['twitter:title'].content : site.meta['twitter:title'].content %>"
		/>
		<meta
			name="twitter:description"
			content="<%= locals.meta && locals.meta['twitter:description'] ? locals.meta['twitter:description'].content : site.meta['twitter:description'].content %>"
		/>
		<meta
			name="twitter:image"
			content="<%= locals.meta && locals.meta['twitter:image'] ? locals.meta['twitter:image'].content : site.meta['twitter:image'].content %>"
		/>
		<meta
			name="twitter:image:alt"
			content="<%= locals.meta && locals.meta['twitter:image:alt'] ? locals.meta['twitter:image:alt'].content : site.meta['twitter:image:alt'].content %>"
		/>

		<link rel="stylesheet" href="./assets/main.css" />
	</head>
	<body class="u-background">
		<main class="o-grid c-skills">
			<section class="c-back">
				<a href="/">Back</a>
				<h2>
					Go back
					<svg
						class="c-svgArrow"
						width="32px"
						height="32px"
						viewBox="-2.4 -2.4 32 32"
						xmlns="http://www.w3.org/2000/svg"
					>
						<g id="SVGRepo_bgCarrier" class="c-svgArrow__bgCarrier"></g>
						<g id="SVGRepo_tracerCarrier" class="c-svgArrow__tracerCarrier"></g>
						<g id="SVGRepo_iconCarrier" class="c-svgArrow__iconCarrier">
							<path d="M7 17L17 7M17 7H8M17 7V16"></path>
						</g>
					</svg>
				</h2>
			</section>
			<header class="c-header"><%- locals.content %></header>
			<section class="c-skills__programmingLanguages">
				<h2>Programming Languages</h2>
				<section>
					<% locals.ProgrammingLanguages.forEach(group => { %>
					<div>
						<h3><%- group.title %></h3>
						<ul>
							<% group.skills.forEach(skill => { %>
							<% if (skill.link) { %>
								<li><a href="<%- skill.link %>" target="_blank" rel="noopener noreferrer"><%- skill.name %></a> <% if (skill.learning == 'true') { %> <span class="u-highlight">(learning)</span> <% } %></li>
							<% } else { %>
								<li><%- skill.name %> <% if (skill.learning == 'true') { %> <span class="u-highlight">(learning)</span> <% } %></li>
							<% } %>
							<% }); %>
						</ul>
					</div>
					<% }); %>
				</section>
			</section>
            <section class="c-skills__other">
				<h2>Other</h2>
				<ul>
                    <% Other.forEach(skill => { %>
                    <li><%- skill.name %> <% if (skill.learning == 'true') { %> <span class="u-highlight">(learning)</span> <% } %></li> </li>
                    <% }); %>
                </ul>
			</section>
			<section class="c-skills__databases">
				<h2>Databases</h2>
				<ul>
                    <% Databases.forEach(skill => { %>
                    <li><%- skill.name %> <% if (skill.learning == 'true') { %> <span class="u-highlight">(learning)</span> <% } %></li> </li>
                    <% }); %>
                </ul>
			</section>
			<section class="c-skills__cms">
				<h2>CMS</h2>
				<ul>
					<% CMS.forEach(skill => { %>
						<li><%- skill.name %> <% if (skill.learning == 'true') { %> <span class="u-highlight">(learning)</span> <% } %></li> </li>
						<% }); %>
				</ul>
			</section>
			<section class="c-skills__languages">
				<h2>Languages</h2>
				<ul>
					<% Languages.forEach(skill => { %>
						<li><%- skill.name %> <span class="u-highlight">(<%- skill.level -%>)</span>  </li>
						<% }); %></span></li>
				</ul>
			</section>
			<section class="c-skills__graphicDesign">
				<h2>Graphic design</h2>
				<ul>
					<% GraphicDesign.forEach(skill => { %>
						<li><%- skill.name %> <% if (skill.learning == 'true') { %> <span class="u-highlight">(learning)</span> <% } %></li> </li>
						<% }); %>
				</ul>
			</section>
			<section class="c-skills__video">
				<h2>Video editing / VFX</h2>
				<ul>
					<% VideoEditing.forEach(skill => { %>
						<li><%- skill.name %> <% if (skill.learning == 'true') { %> <span class="u-highlight">(learning)</span> <% } %></li> </li>
						<% }); %>
				</ul>
			</section>
			<section class="c-skills__3d">
				<h2>3D / CAD design</h2>
				<ul>
					<% DDDDesign.forEach(skill => { %>
						<li><%- skill.name %> <% if (skill.learning == 'true') { %> <span class="u-highlight">(learning)</span> <% } %></li> </li>
						<% }); %>
				</ul>
			</section>
			<section class="c-skills__animation">
				<h2>3D animation</h2>
				<ul>
					<% DDDAnimation.forEach(skill => { %>
						<li><%- skill.name %> <% if (skill.learning == 'true') { %> <span class="u-highlight">(learning)</span> <% } %></li> </li>
						<% }); %>
				</ul>
			</section>
			<section class="c-skills__jsFrameworks">
				<h2>JS frameworks</h2>
				<ul>
					<% JSFrameworks.forEach(skill => { %>
						<li><%- skill.name %> <% if (skill.learning == 'true') { %> <span class="u-highlight">(learning)</span> <% } %></li> </li>
						<% }); %>
				</ul>
			</section>
			<section class="c-skills__phpFrameworks">
				<h2>PHP frameworks</h2>
				<ul>
					<% PHPFrameworks.forEach(skill => { %>
						<li><%- skill.name %> <% if (skill.learning == 'true') { %> <span class="u-highlight">(learning)</span> <% } %></li> </li>
						<% }); %>
				</ul>
			</section>
			<section class="c-skills__cssFrameworks">
				<h2>CSS frameworks</h2>
				<ul>
					<% CSSFrameworks.forEach(skill => { %>
						<li><%- skill.name %> <% if (skill.learning == 'true') { %> <span class="u-highlight">(learning)</span> <% } %></li> </li>
						<% }); %>
				</ul>
			</section>
		</main>
	</body>
</html>
